<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="viewModel"
        type="com.example.musicplayer.viewModel.MusicPlayerViewModel" />
</data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="70dp"
            android:fillViewport="true">

            <include
                layout="@layout/show_music_detail" />

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/container_music_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/beauty_yellow"
            android:layout_gravity="bottom"
            android:background="@color/design_default_color_on_primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_cover_bottom_sheet"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/kamranhoman"
                android:layout_gravity="bottom" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Kode Hamoni Ke Mikhami"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/singer_name_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/comici"
                    android:text="kamran homan"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_play_bottom_sheet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/btn_pause_bottom_sheet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:src="@drawable/ic_pause"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>